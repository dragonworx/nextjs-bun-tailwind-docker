{
  "name": "nextjs-bun-tailwind-docker",
  "version": "0.0.1",
  "description": "Make and shake",
  "scripts": {
    "dev": "bun run --bun next dev",
    "dev:local": "bun run --bun next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:dev": "docker-compose up web-dev",
    "docker:clean": "docker-compose down -v --remove-orphans && docker-compose rm -f",
    "docker:fresh": "bun run docker:clean && bun run docker:dev",
    "docker:build": "docker-compose build web-prod",
    "docker:prod": "docker-compose up web-prod",
    "kill3000": "lsof -ti :3000 | xargs -r kill -9 2>/dev/null || echo 'Port 3000 is free'"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
